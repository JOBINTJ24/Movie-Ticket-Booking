
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/Content/External style/addmovie.css" rel="stylesheet" />
</head>

<body>


    <header>
        <h2>
            <div class="logo">

                <img src="~/Content/Images/logo.png" width="50px" height="50px" style="margin-left: -1100px;">
            </div>

        </h2>

    </header>


    <div class="sidenav" style="display: inline-block;">
        <a href="/Home/adminhome">Home</a><br>
        <a href="/index/addmovies">Add movies</a><br>
        <a href="/index/viewmovie">View movies</a><br>

        <a href="/index/show_data">View Customers</a><br>
        <a href="#contact">Booked movie</a><br>
        <a href="#contact" style="margin-top: 130px;">Logout</a>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="container">
            <input type="text" class="text-field" name="movie_name" placeholder="Movie name">
            <input type="text" class="text-field" name="description" placeholder="Movie description">
            <input type="text" class="text-field" name="image" placeholder="Movie image" onfocus="(this.type='file')">
            <input type="text" class="text-field" name="streaming_date" placeholder="Streaming date" onfocus="(this.type='date')">
            <input type="text" class="text-field" name="genre" placeholder="Genre">
            <input type="text" class="text-field" name="duration" placeholder="Duration">
            <input type="text" class="text-field" name="language" style="margin-left: 30%;" placeholder="Language">
            <button type="submit" style="width: 30%; margin-left: 35%;" ;>Submit</button>





        </div>
    </form>
</body>
</html>



<footer>
